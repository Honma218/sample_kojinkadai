<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.infrastructure.datasource.UserContentMapper">

    <insert id="insert">
        INSERT INTO posts (userId, content)
        VALUES (#{dto.userId}, #{dto.mailAddress}, #{dto.content})
    </insert>

    <select id="select" resultType="com.example.demo.application.dto.UserContentReadDto">
        SELECT id,user_id, content, created_at
        FROM posts
        ORDER BY id DESC
    </select>

    <select id="selectById" resultType="com.example.demo.application.dto.UserContentReadDto">
        SELECT id,user_id, content, created_at
        FROM posts
        WHERE user_id = #{userId}
        ORDER BY id DESC
    </select>

</mapper>